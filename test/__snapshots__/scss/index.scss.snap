// Order
a:has(span) {
  @apply invisiblealign-middletext-smfont-extralightitalicopacity-0 ;
}

// Line breaks
a:has(span) {
  @apply invisiblecursor-pointeralign-middletext-smfont-extralightitalicopacity-0transition-all
;
  --at-apply: invisiblecursor-pointeralign-middletext-smfont-extralightitalicopacity-0transition-all
;
}

// Spacing
body {
  @apply mx-2gap-1p-1 ;
}

// Variant group
div:empty {
  @apply m-2bg-whitefont-lighthover:(bg-gray-400font-medium) ;
}

// Variant group merging
body > #app {
  @apply hover:(bg-gray-400font-lightfont-medium) ;
}
body > #app {
  --at-apply: hover:(bg-gray-400font-lightfont-medium) ;
}
