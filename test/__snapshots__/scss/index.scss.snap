// Order
a:has(span) {
  @apply invisible align-middle text-sm font-extralight italic opacity-0;
}

// Line breaks
a:has(span) {
  @apply invisible cursor-pointer align-middle text-sm font-extralight italic
    opacity-0 transition-all;
  --at-apply: invisible cursor-pointer align-middle text-sm font-extralight
    italic opacity-0 transition-all;
}

// Spacing
body {
  @apply mx-2 gap-1 p-1;
}

// Variant group
div:empty {
  @apply m-2 bg-white font-light hover:(bg-gray-400 font-medium);
}

// Variant group merging
body > #app {
  @apply hover:(bg-gray-400 font-light font-medium);
}
body > #app {
  --at-apply: hover:(bg-gray-400 font-light font-medium);
}
