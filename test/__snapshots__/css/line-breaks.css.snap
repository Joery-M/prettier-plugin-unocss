// Line breaks
a:has(span) {
    @apply invisible cursor-pointer align-middle text-sm font-extralight
        italic opacity-0 transition-all;
}

p {
    --at-apply: invisible cursor-pointer align-middle text-sm font-extralight
        italic opacity-0 transition-all;
}

div {
    > div {
        > div {
            @apply invisible cursor-pointer align-middle text-sm
                font-extralight italic opacity-0 transition-all;
        }
        > div {
            > div {
                > div {
                    > div {
                        @apply p1 p1 p1 p1 p1 p1 p1 p1 p1 p1 p1 p1 p1 p1 p1 p1
                            p1 p1 p1 p1 p1 p1 p1 p1 p1 p1 p1 p1 p1 p1 p1;
                    }
                }
            }
        }
    }
}
